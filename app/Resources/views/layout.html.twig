<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {% javascripts
            '@AppBundle/Resources/public/vendor/modernizr/modernizr.js'
            '@AppBundle/Resources/public/vendor/jquery/dist/jquery.js'
            %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% block stylesheets %}
            {% stylesheets '@AppBundle/Resources/public/vendor/foundation/css/*.css' filter='cssrewrite' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
            <style>
                body {
                    margin-bottom: 30px;
                }
            </style>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="apple-touch-icon" href="{{ asset('favicon.ico') }}">
        <meta name="apple-mobile-web-app-title" content="HappyStats">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black">
    </head>
    <body>
    {% if app.environment == 'prod' %}
        {% include 'layout/google_analytics.html.twig' %}
    {% endif %}
    {% include 'layout/header.html.twig' %}
    {% block body %}{% endblock %}
        {% block javascripts%}
            {% javascripts
            '@AppBundle/Resources/public/vendor/foundation/js/foundation.js'
            '@AppBundle/Resources/public/vendor/foundation/js/foundation/foundation.topbar.js'
            %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    {% include 'layout/footer.html.twig' %}
    <script>
        $(document).foundation();
    </script>
    </body>
</html>
