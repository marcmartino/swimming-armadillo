{% extends "layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        .center.row {
            height: 300px;
            margin-left: auto;
            margin-right: auto;
            max-width: 500px;
        }

        .signup-panel {
            padding: 15px;
            text-align: center;
        }

        .signup-panel i {
            font-size: 30px;
            line-height: 50px;
            color: #999;
        }

        .signup-panel form input, .signup-panel form span {
            height: 50px;
        }

        .signup-panel .welcome {
            font-size: 26px;
            text-align: center;
            margin-left: 0;
        }

        section.active {
            padding-top: 75px !important;
        }

        p.title {
            border-bottom: 1px solid #cccccc !important;
        }

        div#fos_user_registration_form label {
            display: none;
        }
    </style>
{% endblock %}
{% block body %}
<div class="center row">
    <div class="section-container tabs" data-section="tabs">
        <section>
            <div class="content" data-section-content>
                <div class="row">
                    <div class="large-12 columns">
                        <div class="signup-panel">
                            <h2 class="text-center">Welcome to HappyStats!</h2>
                            <div class="panel callout radius">
                                <p>Fill out the fields below to sign up. Ask around for a beta code or register without
                                one to join the waiting list.</p>
                            </div>
                            {% include "FOSUserBundle:Registration:register_content.html.twig" %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="panel radius">
        <a href="{{ path('homepage') }}">{{ 'Existing Users: Login Here'|trans }}</a>
    </div>
<div>

{% endblock body %}
